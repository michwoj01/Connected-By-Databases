# Routes

#ANOTHER PAGE?
GET     /                                   controllers.HomeController.home()

GET     /login                              controllers.AuthUserController.login()
GET     /register                           controllers.AuthUserController.register()
POST    /validatePost                       controllers.AuthUserController.validateLoginPost()
POST    /createUser                         controllers.AuthUserController.createUser()
GET     /logout                             controllers.AuthUserController.logout()
GET     /home                               controllers.HomeController.home()
POST    /sort                               controllers.HomeController.sortScorers()
GET     /tournaments                        controllers.TournamentController.tournaments()
GET     /teams                              controllers.TeamController.teams()
GET     /players                            controllers.PlayerController.players()
GET     /panel                              controllers.UserPanelController.panel()
GET    /addPlayer                           controllers.PlayerController.addPlayer()
GET    /addTeam                             controllers.TeamController.addTeam()
POST    /editTeam                           controllers.TeamController.editTeam()
POST    /editTm                             controllers.TeamController.edit()
GET    /addTournament                       controllers.TournamentController.addTournament()
POST    /editTournament                     controllers.TournamentController.editTournament()
POST    /editT                              controllers.TournamentController.edit()
POST    /addGame                            controllers.TournamentController.fillGame()
POST    /showTournamentPage                 controllers.TournamentController.showTournamentPage()
POST    /deleteTeam                         controllers.TeamController.deleteTeam()
POST    /deletePlayer                       controllers.PlayerController.deletePlayer()
POST    /editPlayer                         controllers.PlayerController.editPlayer()
POST    /editP                              controllers.PlayerController.edit()
GET   /tournament/:id                       controllers.TournamentController.show(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
