# Routes

#ANOTHER PAGE?
GET     /                                   controllers.HomeController.home()

GET     /login                              controllers.AuthUserController.login()
GET     /register                           controllers.AuthUserController.register()
POST    /validatePost                       controllers.AuthUserController.validateLoginPost()
POST    /createUser                         controllers.AuthUserController.createUser()
GET     /logout                             controllers.AuthUserController.logout()
GET     /home                               controllers.HomeController.home()
GET     /tournaments                        controllers.HomeController.tournaments()
GET     /teams                              controllers.HomeController.teams()
GET     /players                            controllers.HomeController.players()
GET     /panel                              controllers.HomeController.panel()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
